{
  "name": "kornelius",
  "displayName": "KoЯnelius",
  "description": "A guided flow for AI-based prompt creation",
  "version": "0.1.0",
  "publisher": "kornelius",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:kornelius-sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kornelius.browsePrompts",
        "title": "KoЯnelius: Browse Prompt Templates"
      },
      {
        "command": "kornelius.fetchMarkdown",
        "title": "KoЯnelius: Fetch Markdown from URL (Jina.ai)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "kornelius-sidebar",
          "name": "Kornelius",
          "icon": "media/barbed-wire.svg",
          "contextualTitle": "KoЯnelius"
        }
      ]
    },
    "configuration": {
      "title": "Kornelius",
      "properties": {
        "kornelius.enableJinaIntegration": {
          "type": "boolean",
          "default": false,
          "description": "Enable integration with Jina.ai for fetching markdown content"
        },
        "kornelius.jinaApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Jina.ai integration"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.17.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
